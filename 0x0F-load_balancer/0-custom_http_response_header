!/usr/bin/env bash
# Configure Nginx so that its HTTP response contains a custom header
# HTTP response contains a custom header (on web-01 & web-02)

sudo apt-get update
sudo apt-get install -y nginx

HOSTNAME=$(hostname)

sudo touch /etc/nginx/conf.d/custom-http-response-header.conf

sudo bash -c "cat << EOF > /etc/nginx/conf.d/custom-http-response-header.conf
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    add_header X-Served-By $HOSTNAME;

    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}
EOF"

sudo rm /etc/nginx/sites-enabled/default

sudo systemctl restart nginx
